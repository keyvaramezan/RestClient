<MudDrawer @bind-Open="SidebarOpen">
    <MudDrawerHeader>
        <MudAvatar Image="assets/acount.png" Size= "Size.Large" />
        <MudText Typo="Typo.h5" Color="Color.Primary">Catalog</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Icon="@Icons.Filled.Home" Href="/">Home</MudNavLink>
        <MudNavGroup Title="Management" Expanded="false" Icon="@Icons.Filled.Dashboard">           
            <MudNavLink Href="/image" IconColor="Color.Success"  Icon="@Icons.Filled.Camera">Images</MudNavLink>
            <MudNavLink Href="/product" Icon="@Icons.Filled.Article">Products</MudNavLink>
        </MudNavGroup>
        <MudNavLink Href="/about" IconColor="Color.Info" Icon="@Icons.Filled.Info">About</MudNavLink>
    </MudNavMenu>
</MudDrawer>
@code {
    [Parameter]
    public bool SidebarOpen { get; set; }
}
