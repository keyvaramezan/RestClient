@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="_themeMode" />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <AppBar OnSidebarToggled="ToggleSidebar" OnThemeToggled="ToggleTheme"/>


    <NavMenu SidebarOpen="_sidebarOpen" />

    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _themeMode = false; //Light(true), Dark(false)
    private bool _sidebarOpen = false;

    private void ToggleSidebar()
    {
        //Console.WriteLine("ToggleSideBar");
        _sidebarOpen = !_sidebarOpen;
    }
    private void ToggleTheme()
    {
        _themeMode = !_themeMode;
    }
}